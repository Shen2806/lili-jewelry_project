<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Quản lý cửa hàng mỹ phẩm</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .navbar {
            padding: 10px 20px;
        }
        .list-group-item {
            transition: 0.3s;
        }
        .list-group-item:hover {
            background-color: #007bff;
            color: white;
        }
        .admin-container {
            margin-top: 20px;
        }
        .admin-content {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }
        .content-section {
            display: none; /* Chỉ hiển thị khi chọn mục tương ứng */
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Admin Dashboard</a>
            <a href="/logout" class="btn btn-danger">Đăng xuất</a>
        </div>
    </nav>
    
    <div class="container admin-container">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">
                    <a href="/admin/products" class="list-group-item list-group-item-action">Quản lý sản phẩm</a>
                    <a href="javascript:void(0)" class="list-group-item list-group-item-action" onclick="navigateTo('orders')">Quản lý đơn hàng</a>
                    <a href="javascript:void(0)" class="list-group-item list-group-item-action" onclick="navigateTo('customers')">Quản lý khách hàng</a>
                    <a href="javascript:void(0)" class="list-group-item list-group-item-action" onclick="navigateTo('employees')">Quản lý nhân viên</a>
                    <a href="javascript:void(0)" class="list-group-item list-group-item-action" onclick="navigateTo('promotions')">Quản lý khuyến mãi</a>
                    <a href="javascript:void(0)" class="list-group-item list-group-item-action" onclick="navigateTo('reports')">Thống kê & Báo cáo</a>
                </div>
            </div>
            <div class="col-md-9" id="content-container">
                <!-- Nội dung động sẽ được load tại đây -->
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Chuyển hướng đến trang cụ thể và tải nội dung từ server
        function navigateTo(page) {
            const contentContainer = document.getElementById('content-container');
            
            // Tải nội dung thông qua AJAX từ server
            fetch(`/admin/${page}`)
                .then(response => response.text())
                .then(html => {
                    contentContainer.innerHTML = html;  // Hiển thị nội dung
                })
                .catch(error => console.error('Error:', error));
        }
    </script>
</body>
</html>
